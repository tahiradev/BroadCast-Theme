
<div class="phero-container">
  <div class="phero-inner-container">
    <div class="phero-img">
      {% if condition %}
        
      {% endif %}
    </div>
    <div class="phero-content">
      <h2>{{ section.settings.p_heading }}</h2>
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Product Hero",
    "settings": [
      {
        "type": "image_picker",
        "id": "p_img",
        "label": "Product Image"
      },
      {
        "type": "text",
        "id": "p_heading",
        "label": "heading"
      },
      {
        "type": "text",
        "id": "p_descript",
        "label": "Description"
      }
      
    ],
    "presets": [
      {
        "name": "Product Hero"
      }
    ]
  }
{% endschema %}