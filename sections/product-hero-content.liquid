
<div class="phero-container">
  <div class="phero-inner-container">
     {% if section.settings.p_img != blank %}
        <img src="{{ section.settings.p_img | img_url: 'master' }}" alt="Product Image" />
      {% endif %}

    <div class="phero-content">
      <h2>{{ section.settings.p_heading }}</h2>
      <p>{{ section.settings.p_descript }}</p>
    </div>
  </div>
</div>
<style>
.phero-inner-container {
  position: relative;
  width: 100%;
  height: auto;
}

.phero-inner-container img {
  width: 100%;
  height: 600px;
  display: block;
  object-fit: cover;
  object-position: center;
}

.phero-content {
  position: absolute;
  bottom: 10px; /* distance from bottom */
  left: 50%;
  transform: translateX(-50%);
  text-align: center;
  color: white;
  padding: 50px

}
@media (max-width: 989px) {
  .phero-content {
    left: 0;
    transform: none;
    padding: 30px;
  }
}
  @media (max-width: 749px) {
  .phero-content {
    bottom: 35%;
    padding: 16px;
    padding-bottom: .66rem;
  }
}
.phero-content h2 {
  font-size: 32px;
  font-weight: 600;
  margin: 0 0 1rem;
  color: white;
}

.phero-content p {
  font-size: 16px;
  margin: 0;
}
</style>
{% schema %}
  {
    "name": "Product Hero",
    "settings": [
      {
        "type": "image_picker",
        "id": "p_img",
        "label": "Product Image"
      },
      {
        "type": "text",
        "id": "p_heading",
        "label": "heading"
      },
      {
        "type": "text",
        "id": "p_descript",
        "label": "Description"
      }
      
    ],
    "presets": [
      {
        "name": "Product Hero"
      }
    ]
  }
{% endschema %}