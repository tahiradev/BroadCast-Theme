{% stylesheet %}
.custom-faq {
  padding: 2rem 0;
  border-top: 1px solid #e1e1e1;
}
.faq-category {
  border-bottom: 1px solid #e1e1e1;
  margin-bottom: 2rem;
}
.faq-category-toggle {
  width: 100%;
  background: none;
  border: none;
  font-size: 1.2rem;
  font-weight: 700;
  text-align: left;
  padding: 1rem 0;
  cursor: pointer;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.faq-items {
  display: none;
  padding-bottom: 1.5rem;
}
.faq-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 2rem;
}
.faq-item .faq-question {
  font-weight: 600;
  margin-bottom: 0.5rem;
}
.faq-answer {
  font-size: 0.95rem;
  line-height: 1.6;
}
{% endstylesheet %}

<div class="custom-faq">
  {% assign categories = section.blocks | map: 'settings' | map: 'category' | uniq %}

  {% for category in categories %}
    <div class="faq-category">
      <button class="faq-category-toggle" type="button">
        {{ category }}
        <span class="icon">+</span>
      </button>
      <div class="faq-items">
        <div class="faq-grid">
          {% for block in section.blocks %}
            {% if block.settings.category == category %}
              <div class="faq-item">
                <h4 class="faq-question">{{ block.settings.question }}</h4>
                <div class="faq-answer">{{ block.settings.answer }}</div>
              </div>
            {% endif %}
          {% endfor %}
        </div>
      </div>
    </div>
  {% endfor %}
</div>

{% javascript %}
document.querySelectorAll('.faq-category-toggle').forEach(toggle => {
  toggle.addEventListener('click', function () {
    const items = this.nextElementSibling;
    const isOpen = items.style.display === 'block';

    // Close all
    document.querySelectorAll('.faq-items').forEach(i => i.style.display = 'none');
    document.querySelectorAll('.faq-category-toggle .icon').forEach(i => i.textContent = '+');

    // Open this one
    if (!isOpen) {
      items.style.display = 'block';
      this.querySelector('.icon').textContent = 'â€“';
    }
  });
});
{% endjavascript %}

{% schema %}
{
  "name": "Custom FAQ",
  "settings": [],
  "blocks": [
    {
      "type": "faq_item",
      "name": "FAQ Item",
      "settings": [
        {
          "type": "text",
          "id": "category",
          "label": "Category Title"
        },
        {
          "type": "richtext",
          "id": "answer",
          "label": "Answer"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom FAQ",
      "blocks": []
    }
  ]
}
{% endschema %}
