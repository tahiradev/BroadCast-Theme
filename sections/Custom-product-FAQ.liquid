{% stylesheet %}
  .faq-item {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
  }
.custom-faq {
  padding: 2rem 0;
  max-width: 80vw;
  margin: 0 auto;
  padding: 0 50px;
}
.faq-category {
  border-bottom: 1px solid #e1e1e1;
  margin-bottom: 2rem;
}
.faq-category-toggle {
  width: 100%;
  background: none;
  border: none;
  font-size: 1.2rem;
  font-weight: 700;
  text-align: left;
  padding: 1rem 0;
  cursor: pointer;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.faq-items {
  display: none;
  padding-bottom: 1.5rem;
}

.faq-item .faq-question {
  font-weight: 600;
  margin-bottom: 0.5rem;
}
.faq-answer {
  font-size: 0.95rem;
  line-height: 1.6;
}
{% endstylesheet %}


{% javascript %}
document.querySelectorAll('.faq-category-toggle').forEach(toggle => {
  toggle.addEventListener('click', function () {
    const items = this.nextElementSibling;
    const isOpen = items.style.display === 'block';

    // Close all
    document.querySelectorAll('.faq-items').forEach(i => i.style.display = 'none');
    document.querySelectorAll('.faq-category-toggle .icon').forEach(i => i.textContent = '+');

    // Open this one
    if (!isOpen) {
      items.style.display = 'block';
      this.querySelector('.icon').textContent = 'â€“';
    }
  });
});
{% endjavascript %}

