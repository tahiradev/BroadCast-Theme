{% schema %}
{
  "name": "FAQ Custom List",
  "tag": "section",
  "class": "custom-faq-wrapper",
  "settings": [],
  "blocks": [
    {
      "type": "faq_item",
      "name": "FAQ List Item",
      "settings": [
        {
          "type": "text",
          "id": "question",
          "label": "Question"
        },
        {
          "type": "textarea",
          "id": "answer",
          "label": "Answer"
        }
      ]
    },
    {
      "type": "info",
      "name": "column info",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description"
        }
      ]
    },
    {
      "type": "image_block",
      "name": "Image + Text Column",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "FAQ Custom List",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<div class="faq-sections">

  <!-- First FAQ List -->
  <div class="faq-accordion">
    <h2>FAQs</h2>
    {% for block in section.blocks %}
      {% if block.type == 'faq_item' %}
        <div class="faq-toggle">
          <button class="faq-question">
            <span class="question-text">{{ block.settings.question }}</span>
            <span class="toggle-icon">+</span>
          </button>
          <div class="faq-answer">
            <p>{{ block.settings.answer }}</p>
          </div>
        </div>
      {% endif %}
    {% endfor %}
  </div>

  <!-- Second Section: 3 Column Info -->
  <div class="faq-columns">
    <h2>Shipping & Returns</h2>
    <div class="columns-wrapper">
      {% for block in section.blocks %}
        {% if block.type == 'info' %}
          <div class="faq-toggle">
            <button class="faq-question">
              <div class="question-text">
                {% if block.settings.icon %}
                  <img src="{{ block.settings.icon | image_url: width: 40 }}" alt="icon" class="faq-icon" />
                {% endif %}
                {{ block.settings.heading }}
              </div>
              <span class="toggle-icon">+</span>
            </button>
            <div class="faq-answer">
              <p>{{ block.settings.description }}</p>
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>

  <!-- Third Section: 3 Column Image + Text -->
  <div class="faq-columns-image-text">
    <h2>Sourcing & Materials</h2>
    <div class="columns-wrapper">
      {% for block in section.blocks %}
        {% if block.type == 'image_block' %}
          <div class="faq-toggle">
            <button class="faq-question">
              <div class="question-text">
                {% if block.settings.image %}
                  <img src="{{ block.settings.image | image_url: width: 80 }}" alt="faq image" class="faq-image" />
                {% endif %}
                <span>View Details</span>
              </div>
              <span class="toggle-icon">+</span>
            </button>
            <div class="faq-answer">
              <p>{{ block.settings.text }}</p>
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>

</div>

<style>
.faq-question {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-weight: bold;
  font-size: 1.1rem;
  background: none;
  border: none;
  cursor: pointer;
  padding: 12px 0;
  width: 100%;
  text-align: left;
}
.faq-answer {
  display: none;
  padding: 10px 0;
}
.faq-toggle.active .faq-answer {
  display: block;
}
.toggle-icon {
  font-size: 1.5rem;
  transition: transform 0.3s ease;
}
.faq-toggle.active .toggle-icon {
  transform: rotate(180deg);
}
.columns-wrapper {
  display: flex;
  flex-wrap: wrap;
  gap: 20px;
}
.faq-col {
  flex: 1 1 30%;
  text-align: center;
}
.faq-icon {
  width: 40px;
  margin-right: 10px;
  vertical-align: middle;
}
.faq-image {
  width: 80px;
  border-radius: 8px;
  margin-right: 10px;
  vertical-align: middle;
}
.question-text {
  display: flex;
  align-items: center;
  gap: 10px;
}
@media(max-width: 768px) {
  .columns-wrapper {
    flex-direction: column;
  }
}
</style>

<script>
document.addEventListener("DOMContentLoaded", function () {
  const toggles = document.querySelectorAll('.faq-toggle');

  toggles.forEach((toggle) => {
    const btn = toggle.querySelector('.faq-question');
    const icon = toggle.querySelector('.toggle-icon');
    const answer = toggle.querySelector('.faq-answer');

    btn.addEventListener('click', () => {
      const isOpen = toggle.classList.contains('active');

      // Close all
      toggles.forEach(t => {
        t.classList.remove('active');
        t.querySelector('.toggle-icon').textContent = '+';
        t.querySelector('.faq-answer').style.display = 'none';
      });

      // Open current
      if (!isOpen) {
        toggle.classList.add('active');
        icon.textContent = 'â€“';
        answer.style.display = 'block';
      }
    });
  });
});
</script>
