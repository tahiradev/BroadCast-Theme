{% schema %}
{
  "name": "Custom FAQ Sections",
  "tag": "section",
  "class": "custom-faq-wrapper",
  "settings": [],
  "blocks": [
    {
      "type": "faq_item",
      "name": "FAQ List Item",
      "settings": [
        {
          "type": "text",
          "id": "question",
          "label": "Question"
        },
        {
          "type": "textarea",
          "id": "answer",
          "label": "Answer"
        }
      ]
    },
    {
      "type": "column_info",
      "name": "3 Column Info Block",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description"
        }
      ]
    },
    {
      "type": "column_image_text",
      "name": "Image with Text Column",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom FAQ Sections",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<div class="faq-sections">
  <!-- FAQ TOGGLE LIST -->
  <div class="faq-accordion">
    <h2>FAQs</h2>
    {% for block in section.blocks %}
      {% if block.type == 'faq_item' %}
        <div class="faq-toggle">
          <button class="faq-question">
            <span class="question-text">{{ block.settings.question }}</span>
            <span class="toggle-icon">+</span>
          </button>
          <div class="faq-answer">
            <p>{{ block.settings.answer }}</p>
          </div>
        </div>
      {% endif %}
    {% endfor %}
  </div>

  <!-- 3-COLUMN WITH ICON/HEADING/DESC -->
  <div class="faq-columns">
    <h2>Shipping & Returns</h2>
    <div class="columns-wrapper">
      {% for block in section.blocks %}
        {% if block.type == 'column_info' %}
          <div class="faq-col">
            {% if block.settings.icon %}
              <img src="{{ block.settings.icon | image_url: width: 60 }}" alt="icon" class="faq-icon" />
            {% endif %}
            <h3>{{ block.settings.heading }}</h3>
            <p>{{ block.settings.description }}</p>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>

  <!-- IMAGE + TEXT COLUMNS -->
  <div class="faq-columns-image-text">
    <h2>Sourcing & Materials</h2>
    <div class="columns-wrapper">
      {% for block in section.blocks %}
        {% if block.type == 'column_image_text' %}
          <div class="faq-col">
            {% if block.settings.image %}
              <img src="{{ block.settings.image | image_url: width: 300 }}" alt="faq image" class="faq-image" />
            {% endif %}
            <p>{{ block.settings.text }}</p>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

<style>
.faq-accordion {
  margin-bottom: 40px;
}
.faq-question {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-weight: bold;
  font-size: 1.1rem;
  background: none;
  border: none;
  cursor: pointer;
  padding: 12px 0;
  width: 100%;
  text-align: left;
}
.toggle-icon {
  font-size: 1.5rem;
  transition: transform 0.3s ease;
}
.faq-answer {
  display: none;
  padding: 10px 0;
}
.faq-toggle.active .faq-answer {
  display: block;
}
.faq-toggle.active .toggle-icon {
  transform: rotate(180deg);
}

/* 3 Column Section */
.columns-wrapper {
  display: flex;
  flex-wrap: wrap;
  gap: 20px;
}
.faq-col {
  flex: 1 1 30%;
  text-align: center;
}
.faq-icon {
  width: 50px;
  margin-bottom: 10px;
}
.faq-image {
  width: 100%;
  border-radius: 8px;
  margin-bottom: 10px;
}
.faq-columns,
.faq-columns-image-text {
  margin-top: 40px;
}
@media(max-width: 768px) {
  .columns-wrapper {
    flex-direction: column;
  }
}
</style>

<script>
document.addEventListener("DOMContentLoaded", function () {
  const toggles = document.querySelectorAll('.faq-toggle');

  toggles.forEach((toggle) => {
    const btn = toggle.querySelector('.faq-question');
    const icon = toggle.querySelector('.toggle-icon');
    const answer = toggle.querySelector('.faq-answer');

    btn.addEventListener('click', () => {
      const isOpen = toggle.classList.contains('active');

      // Close all
      toggles.forEach(t => {
        t.classList.remove('active');
        t.querySelector('.toggle-icon').textContent = '+';
        t.querySelector('.faq-answer').style.display = 'none';
      });

      // Open this one
      if (!isOpen) {
        toggle.classList.add('active');
        icon.textContent = 'â€“';
        answer.style.display = 'block';
      }
    });
  });
});
</script>
