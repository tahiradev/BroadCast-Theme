{% schema %}
{
  "name": "Second FAQ Section",
  "settings": [],
  "blocks": [
    {
      "type": "faq_item",
      "name": "FAQ List Item",
      "settings": [
        { "type": "text", "id": "question", "label": "Question" },
        { "type": "textarea", "id": "answer", "label": "Answer" }
      ]
    },
    {
      "type": "icon_box",
      "name": "Icon Column",
      "settings": [
        { "type": "text", "id": "icon", "label": "Icon (emoji or HTML)" },
        { "type": "text", "id": "heading", "label": "Heading" },
        { "type": "textarea", "id": "description", "label": "Description" }
      ]
    },
    {
      "type": "image_box",
      "name": "Image Text Column",
      "settings": [
        { "type": "image_picker", "id": "image", "label": "Image" },
        { "type": "textarea", "id": "text", "label": "Text below image" }
      ]
    }
  ],
  "presets": [
    {
      "name": "second FAQ Sections",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<div class="faq-wrapper page-width">

  <!-- FAQ TOGGLE SECTION -->
  <h2>FAQs</h2>
  <div class="faq-accordion">
    {% for block in section.blocks %}
      {% if block.type == 'faq_item' %}
        <div class="faq-toggle">
          <button class="faq-question">{{ block.settings.question }}</button>
          <div class="faq-answer">
            <p>{{ block.settings.answer }}</p>
          </div>
        </div>
      {% endif %}
    {% endfor %}
  </div>

  <!-- ICON GRID SECTION -->
  <h2 class="mt-8">Shipping & Returns</h2>
  <div class="faq-icon-grid">
    {% for block in section.blocks %}
      {% if block.type == 'icon_box' %}
        <div class="faq-icon-card">
          <div class="faq-icon">{{ block.settings.icon }}</div>
          <h3>{{ block.settings.heading }}</h3>
          <p>{{ block.settings.description }}</p>
        </div>
      {% endif %}
    {% endfor %}
  </div>

  <!-- IMAGE TEXT GRID SECTION -->
  <h2 class="mt-8">Sourcing & Materials</h2>
  <div class="faq-image-grid">
    {% for block in section.blocks %}
      {% if block.type == 'image_box' %}
        <div class="faq-image-card">
          <img src="{{ block.settings.image | image_url: width: 500 }}" alt="Image FAQ">
          <p>{{ block.settings.text }}</p>
        </div>
      {% endif %}
    {% endfor %}
  </div>

</div>

<style>
.faq-wrapper h2 {
  font-size: 1.75rem;
  margin: 40px 0 20px;
  font-weight: bold;
}

.faq-accordion .faq-toggle {
  margin-bottom: 12px;
  border-bottom: 1px solid #ccc;
}
.faq-accordion .faq-question {
  background: none;
  border: none;
  font-weight: bold;
  font-size: 1.1rem;
  padding: 10px 0;
  cursor: pointer;
  width: 100%;
  text-align: left;
}
.faq-answer {
  display: none;
  padding: 10px 0;
}

.faq-icon-grid, .faq-image-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 20px;
  margin-top: 20px;
}
.faq-icon-card, .faq-image-card {
  flex: 1 1 30%;
  text-align: center;
}
.faq-icon {
  font-size: 2rem;
  margin-bottom: 8px;
}
.faq-image-card img {
  width: 100%;
  border-radius: 10px;
  margin-bottom: 10px;
}
</style>

<script>
document.addEventListener("DOMContentLoaded", function () {
  const questions = document.querySelectorAll('.faq-question');
  questions.forEach((btn) => {
    btn.addEventListener('click', () => {
      const answer = btn.nextElementSibling;
      answer.style.display = answer.style.display === 'block' ? 'none' : 'block';
    });
  });
});
</script>
